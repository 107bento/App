<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="fill_parent"
        android:layout_height="@dimen/fab_margin"
        android:layout_weight="0.3"
        android:scaleType="centerCrop"
        app:srcCompat="@drawable/meal01_01" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.70"
        android:orientation="vertical">
        <!--價錢跟數量-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center_horizontal"
            android:paddingLeft="@dimen/padding_left_and_right"
            android:paddingRight="@dimen/padding_left_and_right"
            android:paddingTop="@dimen/padding_top"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView9"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/text_margin"
                android:text="單價    NT. 90元"
                android:textSize="35sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:paddingRight="@dimen/padding_left_and_right"
                android:orientation="horizontal"
                android:weightSum="1">

                <TextView
                    android:id="@+id/count"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="0.30"
                    android:text="數量"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/subtraction_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:text="-"
                    android:background="#00FF99"
                    android:textSize="20sp" />

                <TextView
                    android:id="@+id/textView10"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingLeft="@dimen/padding_left_and_right"
                    android:paddingRight="@dimen/padding_left_and_right"
                    android:text="2"
                    android:textSize="35sp" />

                <Button
                    android:id="@+id/Addition_btn"
                    android:layout_width="50dp"
                    android:layout_height="wrap_content"
                    android:background="#00FF99"
                    android:text="+"
                    android:textSize="20sp" />
            </LinearLayout>

        </LinearLayout>
        <!--加入購物車-->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingRight="@dimen/padding_left_and_right"
            android:paddingLeft="@dimen/padding_left_and_right"
            android:orientation="vertical"
            android:layout_alignParentBottom="true" >

            <android.support.v7.widget.AppCompatButton
                android:id="@+id/btn_put_in_cart"
                style="?android:textAppearanceSmall"
                android:textColor="@android:color/white"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:background="#FF7744"
                android:text="加入購物車"
                android:textSize="20sp" />
        </LinearLayout>

    </LinearLayout>
</LinearLayout>




