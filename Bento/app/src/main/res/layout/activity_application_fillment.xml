<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="@dimen/padding_left_and_right"
        android:paddingRight="@dimen/padding_left_and_right"
        android:paddingTop="@dimen/padding_top"
        android:orientation="vertical">

        <TextView
            android:id="@+id/application_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:text="替代方案志願序"
            android:textSize="35sp" />
        <!--志願起始-->
        <TextView
            android:id="@+id/app_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="志願一"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
        />
        <Spinner
            android:id="@+id/meal_spinner01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->

        <!--志願起始-->
        <TextView
            android:id="@+id/app_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="志願二"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->
        <!--志願起始-->
        <TextView
            android:id="@+id/app_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:text="志願三"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/activity_horizontal_margin"
            android:layout_marginLeft="@dimen/activity_horizontal_margin"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner03"
