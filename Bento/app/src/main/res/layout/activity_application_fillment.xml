<?xml version="1.0" encoding="utf-8"?>
<!--
    餐點志願序
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:paddingLeft="@dimen/padding_left_and_right"
            android:paddingRight="@dimen/padding_left_and_right"
            android:paddingTop="@dimen/padding_top">

            <TextView
                android:id="@+id/application_title"
                android:layout_width="wrap_content"
                android:layout_height="64dp"
                android:layout_gravity="center"
                android:padding="@dimen/text_margin"
                android:text="替代方案志願序"
                android:textSize="@dimen/text_headline" />
            <!--志願起始-->
            <TextView
                android:id="@+id/app_01"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="志願一"
                android:textSize="@dimen/text_title" />

            <Spinner
                android:id="@+id/store_spinner01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:prompt="@string/store_option"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/meal_spinner01"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:prompt="@string/meal_option"
                android:spinnerMode="dialog" />
            <!--志願結束-->

            <!--志願起始-->
            <TextView
                android:id="@+id/app_02"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="志願二"
                android:textSize="@dimen/text_title" />

            <Spinner
                android:id="@+id/store_spinner02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:prompt="@string/store_option"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/meal_spinner02"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:prompt="@string/meal_option"
                android:spinnerMode="dialog" />
            <!--志願結束-->
            <!--志願起始-->
            <TextView
                android:id="@+id/app_03"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:text="志願三"
                android:textSize="20sp" />

            <Spinner
                android:id="@+id/store_spinner03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:layout_marginTop="@dimen/activity_horizontal_margin"
                android:prompt="@string/store_option"
                android:spinnerMode="dialog" />

            <Spinner
                android:id="@+id/meal_spinner03"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_horizontal_margin"
                android:prompt="@string/meal_option"
                android:spinnerMode="dialog" />
            <!--志願結束-->

            <CheckBox
                android:id="@+id/ignore"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="跳過志願序(該店家沒有成單時，放棄餐點)"
                android:textSize="@dimen/text_body_menu_btn" />
            <CheckBox
                android:id="@+id/checkBox"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="@dimen/activity_vertical_margin"
                android:layout_marginTop="@dimen/activity_vertical_margin"
                android:text="若志願序都落空時，由系統隨機分配"
                android:textSize="@dimen/text_body_menu_btn" />

            <!--完成-->
            <android.support.v7.widget.AppCompatButton
                android:id="@+id/finish_fillment"
                style="?android:textAppearanceSmall"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_margin="@dimen/activity_vertical_margin"
                android:background="@color/colorAccent"
                android:text="完成"
                android:textColor="@color/textColorIcon"
                android:textSize="@dimen/text_subhead" />

        </LinearLayout>
    </ScrollView>
</LinearLayout>