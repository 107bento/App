<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
     android:layout_width="match_parent">
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight=".4"
        android:orientation="vertical"
        android:weightSum="1">

        <TextView
            android:id="@+id/application_title"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="替代方案志願序"
            android:textSize="35sp" />
        <!--志願起始-->
        <TextView
            android:id="@+id/app_01"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="志願一"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
        />
        <Spinner
            android:id="@+id/meal_spinner01"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->

        <!--志願起始-->
        <TextView
            android:id="@+id/app_02"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="志願二"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner02"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->
        <!--志願起始-->
        <TextView
            android:id="@+id/app_03"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="志願三"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner03"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->
        <!--志願起始-->
        <TextView
            android:id="@+id/app_04"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="志願四"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner04"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->
        <!--志願起始-->
        <TextView
            android:id="@+id/app_05"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:text="志願五"
            android:textSize="20sp" />
        <Spinner
            android:id="@+id/store_spinner05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/store_list"
            android:spinnerMode="dialog"
            android:prompt="@string/store_option"
            />
        <Spinner
            android:id="@+id/meal_spinner05"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:paddingLeft="65dp"
            android:entries="@array/meal_list"
            android:spinnerMode="dialog"
            android:prompt="@string/meal_option"
            />
        <!--志願結束-->
        <CheckBox
            android:id="@+id/checkBox"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="志願序接落空時，由系統隨機分配" />
        <Button
            android:id="@+id/finish_fillment"
            android:layout_width="276dp"
            android:layout_height="60dp"
            android:layout_marginTop="20dp"
            android:layout_marginLeft="60dp"
            android:background="#FF7744"
            android:text="完成"
            android:textSize="20sp" />
    </LinearLayout>
</ScrollView>
