<?xml version="1.0" encoding="utf-8"?>
<!--購買紀錄 詳細資料-->
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/padding_left_and_right"
    android:paddingRight="@dimen/padding_left_and_right"
    android:paddingTop="@dimen/padding_top">

    <ImageView
        android:id="@+id/purchase_record_detail_img"
        android:layout_width="wrap_content"
        android:layout_height="80dp"
        android:layout_margin="@dimen/main_card_margin_horizontal"/>

    <TextView
        android:id="@+id/purchase_record_detail_store"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_card_margin_horizontal"
        android:text="店家名稱"
        android:textSize="@dimen/text_headline"
        />
    <TextView
        android:id="@+id/purchase_record_detail_meal"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_card_margin_horizontal"
        android:text="餐點名稱"
        android:textSize="@dimen/text_headline"
        />

    <TextView
        android:id="@+id/purchase_record_detail_count"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_card_margin_horizontal"
        android:text="餐點數量"
        android:textSize="@dimen/text_headline"
        />

    <TextView
        android:id="@+id/purchase_record_detail_status"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="@dimen/main_card_margin_horizontal"
        android:text="領餐狀態"
        android:textSize="@dimen/text_headline"
        />

    <!--要放志願序的詳細資料-->
    <TextView
        android:id="@+id/purchase_record_detail_application"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="志願序內容>>"/>

</LinearLayout>