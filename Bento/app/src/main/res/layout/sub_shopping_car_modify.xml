<?xml version="1.0" encoding="utf-8"?>
<!--
    購物車中修改餐點
-->
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:orientation="vertical">

    <include layout="@layout/toolbar"/>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <!--商品圖-->
            <ImageView
                android:id="@+id/imageView2"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_gravity="center_horizontal"
                android:elevation="@dimen/card_recycler_elevation"
                android:scaleType="centerCrop"
                app:srcCompat="@drawable/store0_1" />

            <!--價錢跟數量-->
            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:orientation="vertical">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/textView9"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="單價"
                        android:textSize="@dimen/text_display_34"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="14dp" />

                    <TextView
                        android:id="@+id/meal_purchase_value"
                        android:layout_height="wrap_content"
                        android:layout_width="wrap_content"
                        android:layout_gravity="center_vertical"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:layout_centerHorizontal="true"
                        android:layout_toRightOf="@id/textView9"
                        android:layout_alignTop="@+id/textView9"
                        android:text="NT.90元"
                        android:textSize="@dimen/text_display_34"
                        />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/text_margin"
                    android:layout_gravity="center">

                    <TextView
                        android:id="@+id/count"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="數量"
                        android:textSize="@dimen/text_display_34"
                        android:layout_marginLeft="14dp"
                        android:layout_centerVertical="true"
                        android:layout_alignParentLeft="true"
                        android:layout_alignParentStart="true"
                        android:layout_marginStart="14dp" />

                    <!--
                        AmountView
                        屬性說明：
                        btnTextSize：左右按鈕字的大小
                        tvTextSize：中間字的大小
                        btnWidth：左右2边+-按钮的宽度
                        tvWidth：中间TextView的宽度
                        currentValue：目前顯示的值
                        maxValue：最大值
                        minValue：最小值
                    -->
                    <com.example.aishalien.bento.AmountView
                        android:id="@+id/amountView"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/text_display_34"
                        android:layout_toRightOf="@id/count"
                        app:btnTextSize="@dimen/text_caption"
                        app:btnWidth="36dp"
                        app:tvWidth="50dp"
                        app:currentValue="5"
                        app:maxValue="99"
                        app:minValue="3"
                        android:layout_marginTop="5dp"
                        android:layout_marginLeft="@dimen/text_margin"
                        android:layout_marginRight="@dimen/text_margin"
                        android:layout_alignTop="@id/count" />
                </RelativeLayout>
            </LinearLayout>

            <!--志願序開始-->
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:paddingLeft="@dimen/padding_left_and_right"
                android:paddingRight="@dimen/padding_left_and_right"
                android:paddingTop="@dimen/padding_top">

                <View
                    android:layout_columnSpan="2"
                    android:background="@color/divider"
                    android:layout_height="0.5dp"
                    android:layout_width="fill_parent"/>

                <!--志願起始-->
                <TextView
                    android:id="@+id/app_01"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="志願一"
                    android:textSize="@dimen/text_title" />

                <Spinner
                    android:id="@+id/store_spinner01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:prompt="@string/store_option"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/meal_spinner01"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:prompt="@string/meal_option"
                    android:spinnerMode="dialog" />
                <!--志願結束-->

                <!--志願起始-->
                <TextView
                    android:id="@+id/app_02"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="志願二"
                    android:textSize="@dimen/text_title" />

                <Spinner
                    android:id="@+id/store_spinner02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:prompt="@string/store_option"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/meal_spinner02"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:prompt="@string/meal_option"
                    android:spinnerMode="dialog" />
                <!--志願結束-->
                <!--志願起始-->
                <TextView
                    android:id="@+id/app_03"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:text="志願三"
                    android:textSize="20sp" />

                <Spinner
                    android:id="@+id/store_spinner03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:layout_marginTop="@dimen/activity_horizontal_margin"
                    android:prompt="@string/store_option"
                    android:spinnerMode="dialog" />

                <Spinner
                    android:id="@+id/meal_spinner03"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_horizontal_margin"
                    android:prompt="@string/meal_option"
                    android:spinnerMode="dialog" />
                <!--志願結束-->
                <CheckBox
                    android:id="@+id/ignore"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/activity_vertical_margin"
                    android:layout_marginTop="@dimen/activity_vertical_margin"
                    android:text="跳過志願序(該店家沒有成單時，放棄餐點)"
                    android:textSize="@dimen/text_body_menu_btn" />
                <CheckBox
                    android:id="@+id/checkBox"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:text="若志願序都落空時，由系統隨機分配"
                    android:textSize="@dimen/text_body_menu_btn" />

                <!--確認修改-->
                <android.support.v7.widget.AppCompatButton
                    android:id="@+id/confirm_change"
                    style="?android:textAppearanceSmall"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_margin="@dimen/activity_vertical_margin"
                    android:background="@color/colorAccent"
                    android:text="確認修改"
                    android:textColor="@color/textColorIcon"
                    android:textSize="@dimen/text_subhead" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>
</LinearLayout>