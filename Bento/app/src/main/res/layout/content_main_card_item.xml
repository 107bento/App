<?xml version="1.0" encoding="utf-8"?>
<!--
    本日店家CardView_item
-->
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="0dp"
    android:layout_height="wrap_content"
    android:layout_marginBottom="@dimen/text_margin"
    android:layout_marginStart="@dimen/main_card_margin_horizontal"
    android:layout_marginEnd="4dp"
    android:layout_marginTop="@dimen/main_card_margin_vertical"
    android:layout_weight="1"
    android:background="?android:attr/selectableItemBackground"
    android:foreground="?attr/selectableItemBackground"
    card_view:cardCornerRadius="@dimen/card_recycler_corner_radius"
    card_view:cardElevation="@dimen/card_recycler_elevation"
    card_view:cardUseCompatPadding="true"
    android:id="@+id/shop_item_card">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <ImageView
            android:id="@+id/shop_item_img"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_margin="@dimen/main_card_margin_vertical"
            android:scaleType="centerCrop"
            android:adjustViewBounds="true"
            app:srcCompat="@drawable/store0" />


            <ImageView
                android:id="@+id/shop_item_counts_colorball"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_below="@id/shop_item_img"
                android:layout_marginTop="@dimen/main_card_margin_vertical"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:padding="@dimen/padding_top"
                android:src="@drawable/orange_circle" />

            <TextView
                android:id="@+id/shop_item_tittle"
                style="@style/TextAppearance.AppCompat.Large"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="@dimen/card_title_margin"
                android:layout_toRightOf="@id/shop_item_counts_colorball"
                android:layout_below="@id/shop_item_img"
                android:text="冰品" />



    </RelativeLayout>
</android.support.v7.widget.CardView>